# Azure Cosmos DB
COSMOS_ENDPOINT=http://localhost:8081
COSMOS_DATABASE=agent-stack

# Microsoft Foundry / Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Azure Storage (Azurite defaults for local development)
AZURE_STORAGE_ACCOUNT_URL=http://127.0.0.1:10000/devstoreaccount1
AZURE_STORAGE_CONTAINER=$$web

# Microsoft Entra ID
ENTRA_TENANT_ID=your-tenant-id
ENTRA_CLIENT_ID=your-client-id
ENTRA_CLIENT_SECRET=your-client-secret
ENTRA_REDIRECT_URI=http://localhost:8000/auth/callback

# Azure App Configuration
APP_CONFIG_ENDPOINT=https://your-app-config.azconfig.io

# Application
APP_ENV=development
APP_SECRET_KEY=your-secret-key-for-sessions
LOG_LEVEL=INFO

# Application Insights (optional for local development)
APPLICATIONINSIGHTS_CONNECTION_STRING=
